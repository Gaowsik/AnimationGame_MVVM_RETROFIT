<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animation_game">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CIS_GUI">
        <activity
            android:name="com.example.animation_game.Register"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MyNoActionBarTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="com.example.animation_game.FinishActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MyNoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.animation_game.GameActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MyNoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.animation_game.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyNoActionBarTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.animation_game.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyNoActionBarTheme"
            android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>